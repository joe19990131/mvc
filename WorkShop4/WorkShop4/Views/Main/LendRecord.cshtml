@model WorkShop4.Models.LendRecord
@{
    ViewBag.Title = "LendRecord";
}

<h2>LendRecord</h2>
@if (ViewBag.LendRecord != null)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr id>
                <th>借閱日期</th>
                <th>借閱人編號</th>
                <th>英文姓名</th>
                <th>中文姓名</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in (List<WorkShop4.Models.LendRecord>)ViewBag.LendRecord)
                {
                <tr>
                    <td>@item.LendDate</td>
                    <td>@item.KeeperId</td>
                    <td>@item.UserEname</td>
                    <td>@item.UserCname</td>
                 
                </tr>
            }
        </tbody>
    </table>
}
